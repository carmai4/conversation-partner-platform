@model CPP2.Cours

@{
    ViewBag.Title = "Details";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2>Admin Course Details</h2>

<div>

    <hr />
    <dl class="dl-horizontal">
        <dt>
            @Html.DisplayNameFor(model => model.Subject)
        </dt>

        <dd>
            @Html.DisplayFor(model => model.Subject)
        </dd>

        <dt>
            @Html.DisplayNameFor(model => model.CourseNum)
        </dt>

        <dd>
            @Html.DisplayFor(model => model.CourseNum)
        </dd>

        <dt>
            @Html.DisplayNameFor(model => model.Semester)
        </dt>

        <dd>
            @Html.DisplayFor(model => model.Semester)
        </dd>

        <dt>
            @Html.DisplayNameFor(model => model.CourseName)
        </dt>

        <dd>
            @Html.DisplayFor(model => model.CourseName)
        </dd>

        <dt>
            @Html.DisplayNameFor(model => model.CppUser.AspNetUserId)
        </dt>

        <dd>
            @Html.DisplayFor(model => model.CppUser.AspNetUserId)
        </dd>
        @if (Model.CppUser.Profiles.Count > 0)
        {
            <dt>
                @Html.DisplayNameFor(model => model.CppUser.Profiles.SingleOrDefault().FirstName)
            </dt>
            <dd>
                @Html.DisplayFor(model => model.CppUser.Profiles.SingleOrDefault().FirstName)
            </dd>
            <dt>
                @Html.DisplayNameFor(model => model.CppUser.Profiles.SingleOrDefault().LastName)
            </dt>
            <dd>
                @Html.DisplayFor(model => model.CppUser.Profiles.SingleOrDefault().LastName)
            </dd>
        }
        else
        {
            <dt>
                Name
            </dt>
            <dd>
                No Name
            </dd>
        }


    </dl>
</div>
<p>

    @Html.ActionLink("Back to List", "Index")
